<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ProjectApplyMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_PROJECTAPPLY
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		USER_ID,	
		USERNAME,	
		FILE_TYPE,	
		FILE_NAME,	
		PROJECT_NAME,	
		PROJECT_ID,	
		NUM,	
		NAME,	
		PHONE,	
		ADDR,	
		BID_DOCUMENT,	
		CREATE_TIME,	
		STATUS,	
		PROJECTAPPLY_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{USER_ID},	
		#{USERNAME},	
		#{FILE_TYPE},	
		#{FILE_NAME},	
		#{PROJECT_NAME},	
		#{PROJECT_ID},	
		#{NUM},	
		#{NAME},	
		#{PHONE},	
		#{ADDR},	
		#{BID_DOCUMENT},	
		#{CREATE_TIME},	
		#{STATUS},	
		#{PROJECTAPPLY_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			PROJECTAPPLY_ID = #{PROJECTAPPLY_ID}
	</delete>
	
	<!-- 审核-->
	<update id="checkProjectApply" parameterType="pd">
		update
		<include refid="tableName"></include>
		set STATUS = #{STATUS}
		where 
			PROJECTAPPLY_ID = #{PROJECTAPPLY_ID}
	</update>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FILE_TYPE = #{FILE_TYPE},
			FILE_NAME = #{FILE_NAME},
			PROJECT_NAME = #{PROJECT_NAME},
			PROJECT_ID = #{PROJECT_ID},
			NUM = #{NUM},
			NAME = #{NAME},
			PHONE = #{PHONE},
			ADDR = #{ADDR},
			BID_DOCUMENT = #{BID_DOCUMENT},
			STATUS = #{STATUS},
		PROJECTAPPLY_ID = PROJECTAPPLY_ID
		where 
		PROJECTAPPLY_ID = #{PROJECTAPPLY_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			PROJECTAPPLY_ID = #{PROJECTAPPLY_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
					PROJECT_NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
					 or 
					PHONE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				)
		</if>
		<if test="pd.STATUS!= null and pd.STATUS != ''">
			and STATUS = #{pd.STATUS}
		</if>
		<if test="pd.lastStart!= null and pd.lastStart != ''">
			and CREATE_TIME &gt;= #{pd.lastStart}
		</if>
		<if test="pd.lastEnd!= null and pd.lastEnd != ''">
			and CREATE_TIME &lt;= #{pd.lastEnd}
		</if>
		<if test="pd.USER_ID!= null and pd.USER_ID != ''">
			and USER_ID = #{pd.USER_ID}
		</if>
		ORDER BY STATUS asc, CREATE_TIME DESC
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			PROJECTAPPLY_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 通过NAME获取数据 -->
	<select id="findByName" parameterType="pd" resultType="pd" >
		select 
			<include refid="Field"></include>
		from 
			<include refid="tableName"></include>
		where 
			PROJECT_ID = #{NAME}
	</select>
	
	
	<!-- kuang 767375210 -->
</mapper>