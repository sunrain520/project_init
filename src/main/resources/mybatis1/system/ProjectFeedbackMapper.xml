<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ProjectFeedbackMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_PROJECTFEEDBACK
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		PROJECT_NAME,	
		PROJECT_ID,	
		REASON,	
		COMPANY_NAME,	
		MONEY,	
		MODEL,	
		NUM,	
		USER_ID,	
		USERNAME,	
		CREATE_TIME,	
		PROJECTFEEDBACK_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{PROJECT_NAME},	
		#{PROJECT_ID},	
		#{REASON},	
		#{COMPANY_NAME},	
		#{MONEY},	
		#{MODEL},	
		#{NUM},	
		#{USER_ID},	
		#{USERNAME},	
		now(),	
		#{PROJECTFEEDBACK_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			PROJECTFEEDBACK_ID = #{PROJECTFEEDBACK_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			REASON = #{REASON},
			COMPANY_NAME = #{COMPANY_NAME},
			MONEY = #{MONEY},
			MODEL = #{MODEL},
			NUM = #{NUM},
		PROJECTFEEDBACK_ID = PROJECTFEEDBACK_ID
		where 
		PROJECTFEEDBACK_ID = #{PROJECTFEEDBACK_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			PROJECTFEEDBACK_ID = #{PROJECTFEEDBACK_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
					COMPANY_NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					PROJECT_NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
					 or 
					MODEL LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
					 or 
					USERNAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				)
		</if>
		<if test="pd.PROJECT_LIST != null">
			and PROJECT_ID in
			<foreach collection="pd.PROJECT_LIST" index="index" item="custid"
				open="(" separator="," close=")">
				#{pd.PROJECT_LIST[${index}]}
			</foreach>
		</if>
		<if test="pd.USER_ID!= null and pd.USER_ID != ''">
			and USER_ID = #{pd.USER_ID}
		</if>
		<if test="pd.PROJECT_LIST != null">
			and PROJECT_ID in
			<foreach collection="pd.PROJECT_LIST" index="index" item="custid"
				open="(" separator="," close=")">
				#{pd.PROJECT_LIST[${index}]}
			</foreach>
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			PROJECTFEEDBACK_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 通过NAME获取数据 -->
	<select id="findByName" parameterType="pd" resultType="pd" >
		select 
			<include refid="Field"></include>
		from 
			<include refid="tableName"></include>
		where 
			PROJECT_NAME = #{NAME}
	</select>
	
	
	<!-- kuang 767375210 -->
</mapper>